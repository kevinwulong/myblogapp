<%- include('header') %>
<div class="panel panel-default" id="signupbox">
  <div class="panel-heading">注册</div>
  <div class="panel-body">
  <form role="form" method ="post" enctype="multipart/form-data">
	  <div class="form-group">
	    <label for="exampleInputEmail1">用户名</label>
	    <input type="text" class="form-control" id="exampleInputEmail1" placeholder="用户名......." name="name">
	  </div>
	  <div class="form-group">
	    <label for="exampleInputPassword1">密码</label>
	    <input type="password" class="form-control" id="exampleInputPassword1" placeholder="密码......" name="password">
	  </div>
	  <div class="form-group">
	    <label for="exampleInputPassword2">重复密码</label>
	    <input type="password" class="form-control" id="exampleInputPassword2" placeholder="密码......" name="repassword">
	  </div>
	 <div class = "form-group">
	 	<label>性别</label>
		<select class="form-control" name="gender">
		  <option value="m">男</option>
		  <option value="f">女</option>
		  <option value="x">嘿嘿</option>
		</select>
	 </div> 
	  <div class="form-group">
	    <label for="exampleInputFile">头像</label>
	    <input type="file" id="exampleInputFile" name="avatar" class="btn btn-default">
	    <p class="help-block">超帅气的头像</p>
	  </div>
		<div class="form-group">
			<label>做个帅气的介绍吧</label>
			<textarea class="form-control" rows="3" name='bio' v-model="user.bio"></textarea>
		</div>
	  <button type="submit" class="btn btn-default">注册</button>
  </form>
  </div>
</div>
<%- include('footer') %>