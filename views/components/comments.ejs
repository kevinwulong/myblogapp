
<div class="container-fluid">

      <div class="row">
                  
             <div class="col-xs-12 col-sm-12 col-md-12">
		<div class="panel panel-default comment">
		  <div class="panel-body">
			<% comments.forEach(function(comment ){ %>
				<div class="avatar_box">
					<img src="/img/<%= comment.author.avatar %>">
				</div>

				<div class="comment_content">
					<a class="comment_author" href="/posts?author=<%= comment.author._id %>">
						<%= comment.author.name %>
					</a>
					<a href="#" class="comment_date">
						<%= comment.created_at %>
					</a>
					<div class="comment_main">
						<%- comment.content %>
					</div>

					  <% if (user && comment.author._id && user._id.toString() === comment.author._id.toString()) { %>
						<div class="actions">
							<a class="comment_remove" href="/posts/<%= post._id %>/comment/<%= comment._id %>/remove">
								删除
							</a>
						</div>
					<% } %>
				</div>
			<% })%>

			<% if(user) {%>
			<div class="content_text">
				<form method="post" action="/posts/<%= post._id %>/comment" id="comment_form">
					<textarea name="content"  ></textarea>
					<button type="submit" class="btn btn-success">留言</button>
				</form>
			</div>
			<%}%>
		  </div>
		</div>
	</div>
      </div>
</div>

